<div id="game-page" class="large-12 columns">
  <div class="row">
    <div class="large-9 columns large-centered">
      <div class="button-bar left">
        <ul class="button-group">
          <li><%= link_to 'Find another game', games_path, :class => 'small button' %></li>
          <% if !@game.admin || (@game.admin && current_user && @game.admin == current_user.twitter_id)%>
            <li><%= link_to 'Edit', edit_game_path(@game), :class => 'small button' %></li>
          <% end %>
        </ul>
      </div>
      <p id="notice"><%= notice %></p>
      <section class="large-9 columns">
        <div class="row">
          <div class="row">
            <div class="small-6 columns">
              <h4><%= @game.date %></h4>
            </div>
            <div class="small-6 columns">
              <h4 class="right"><%= @game.time %></h4>
            </div>
          </div>
          <div class="panel">
            <% if @user %>
              <p>@<%= @user.handle %></p>
            <% end %>
            <h2><%= @game.name %></h2>
            <p>Max number of players: <%= @game.player_max %></p>
          </div>
          <div class="row first-row">
            <div class="large-12 columns">
              <h4 class="right"><%= @game.game_type %></h4>
              <h4 class="left location">
                <%= @game.location %><br>
                <%= @game.city %>, <%= @game.state %> <%= @game.zip %>
              </h4>
              <h4><%= @game.equipment %></h4>
            </div>
          </div>
          <%= link_to "You in ?  Let me know.", {:action => :join}, :class => 'button large-12 columns has-tip tip-bottom', :title => 'You we will need you to sign in with twitter if you would like to join this event.', 'data-tooltip' => '' %>
        </div>
      </section>
      <section class="large-3 columns">
        <h4>Users joined</h4>
        <% if @users.present? && !@users.empty? %>
          <% @users.each do |user| %>
            <%= image_tag user.image, :title => user.name, :class => 'has-tip tip-bottom', 'data-tooltip' => '' %>
          <% end %>
        <% else %>
          <em>Nobody has joined the game yet.</em>
        <% end %>
      </section>
    </div>
  </div>
</div>


